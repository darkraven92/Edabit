def area_shape(base, height, shape):
    if shape == "triangle":
        return 0.5 * base * height
    elif shape == "parallelogram":
        return base * height
    else:
        raise ValueError("Invalid shape. Supported shapes are 'triangle' and 'parallelogram'.")

# Test cases
print(area_shape(2, 3, "triangle"))           # Output: 3.0
print(area_shape(8, 6, "parallelogram"))      # Output: 48
print(area_shape(2.9, 1.3, "parallelogram"))  # Output: 3.77
