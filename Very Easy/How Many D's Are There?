def count_d(sentence):
    # Convert the sentence to lowercase to make the count case-insensitive
    lower_sentence = sentence.lower()
    # Count the occurrences of 'd' in the lowercased sentence
    count = lower_sentence.count('d')
    return count

# Test cases
print(count_d("My friend Dylan got distracted in school.")) # Output: 4
print(count_d("Debris was scattered all over the yard.")) # Output: 3
print(count_d("The rodents hibernated in their den.")) # Output: 3
